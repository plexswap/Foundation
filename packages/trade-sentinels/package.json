{
  "name": "@plexswap/trade-sentinels",
  "version": "3.1.5",
  "description": "ðŸ›  An SDK for building applications on top of Plexswap.",
  "main": "dist/base.js",
  "module": "dist/base.mjs",
  "types": "dist/base/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/base/index.d.ts",
      "import": "./dist/base.mjs",
      "require": "./dist/base.js"
    },
    "./Hermes": {
      "types": "./dist/Hermes/index.d.ts",
      "import": "./dist/Hermes.mjs",
      "require": "./dist/Hermes.js"
    },
    "./Valorus": {
      "types": "./dist/Valorus/index.d.ts",
      "import": "./dist/Valorus.mjs",
      "require": "./dist/Valorus.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plexswap/plexswap-frontend.git",
    "directory": "packages/trade-sentinels"
  },
  "keywords": [
    "plexswap"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "coverage": "vitest run --coverage",
    "test": "vitest --run",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "format:check": "prettier --check --loglevel error \"{src,test}/**/*.{js,jsx,ts,tsx,json}\"",
    "format:write": "prettier --write \"{src,test}/**/*.{js,jsx,ts,tsx,json}\"",
    "lint": "eslint '{src,test}/**/*.{js,jsx,ts,json}'",
    "publish": "pnpm publish --access public"
  },
  "devDependencies": {
    "@plexswap/tokens": "workspace:*",
    "@types/node": "^15.12.2",
    "tslib": "^2.3.0",
    "tsup": "^6.7.0"
  },
  "dependencies": {
    "@plexswap/chains": "workspace:*",
    "@plexswap/sdk-core": "workspace:*",
    "@plexswap/gateway-guardians": "workspace:*",
    "@plexswap/hub-center": "workspace:*",
    "@plexswap/sdk-extended": "workspace:*",
    "@plexswap/metalists": "workspace:*",
    "abitype": "^0.9.8",
    "tiny-invariant": "^1.1.0",
    "dayjs": "^1.11.10",
    "viem": "2.13.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
