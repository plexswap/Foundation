{
  "name": "@plexswap/sdk-core",
  "license": "MIT",
  "version": "3.1.5",
  "description": "ðŸ›  An SDK for building applications on top of Plexswap.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plexswap/Plexswap-Frontend.git",
    "directory": "packages/sdk-core"
  },
  "keywords": [
    "plexswap",
    "bsc"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint src test",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "update:snapshot": "vitest -u",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "publish": "pnpm publish --access public"
  },
  "dependencies": {
    "@plexswap/chains": "workspace:*",
    "big.js": "^5.2.2",
    "decimal.js-light": "^2.5.0",
    "tiny-invariant": "^1.3.0",
    "tiny-warning": "^1.0.3",
    "toformat": "^2.0.0",
    "viem": "2.13.3"
  },

  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "tsup": "^6.7.0"
  },
  "engines": {
    "node": ">=10"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}


